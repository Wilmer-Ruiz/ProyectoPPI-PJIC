<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Filtro1</filter-name>
        <filter-class>filtros.Filtro1</filter-class>
        <init-param>
            <param-name>pass</param-name>
            <param-value>wilmer12</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>wilmer</param-value>
        </init-param>
        <init-param>
            <param-name>user2</param-name>
            <param-value>admin10</param-value>
        </init-param>
        <init-param>
            <param-name>pass2</param-name>
            <param-value>wilmer123</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>Filtro</filter-name>
        <filter-class>filtros.Filtro</filter-class>
        <init-param>
            <param-name>tipo</param-name>
            <param-value>usuario registrado</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>Filtro2</filter-name>
        <filter-class>filtros.Filtro2</filter-class>
        <init-param>
            <param-name>user</param-name>
            <param-value>admin10</param-value>
        </init-param>
        <init-param>
            <param-name>pass</param-name>
            <param-value>wilmer123</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Filtro2</filter-name>
        <url-pattern>/Servidor2</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filtro</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filtro1</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servidores.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servidor2</servlet-name>
        <servlet-class>servidores.Servidor2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearCuenta</servlet-name>
        <servlet-class>servidores.CrearCuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ecoparques</servlet-name>
        <servlet-class>servidores.Ecoparques</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servidor2</servlet-name>
        <url-pattern>/Servidor2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearCuenta</servlet-name>
        <url-pattern>/CrearCuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ecoparques</servlet-name>
        <url-pattern>/Ecoparques</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
